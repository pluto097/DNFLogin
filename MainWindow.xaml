<adu:AduWindow x:Class="DNFLogin.MainWindow"
               x:Name="RootWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:adu="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
               Title="DNF Login"
               Icon="pack://application:,,,/Assets/DNF.ico"
               Width="516"
               Height="312"
               ResizeMode="NoResize"
               WindowStyle="None"
               Background="Transparent"
               AllowsTransparency="True"
               BorderThickness="0"
               Opacity="0"
               UseLayoutRounding="True"
               WindowStartupLocation="CenterScreen"
               Loaded="Window_Loaded">
    <Grid Background="Transparent">
        <Grid x:Name="RootContainer"
              ClipToBounds="True"
              MouseLeftButtonDown="RootContainer_MouseLeftButtonDown">
            <Grid.Background>
                <ImageBrush x:Name="BackgroundImageBrush"
                            Stretch="UniformToFill"
                            AlignmentX="Center"
                            AlignmentY="Center" />
            </Grid.Background>
        </Grid>

        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=adu:AduWindow}}"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Normal"
                   Margin="24,20,24,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.75" />
            </TextBlock.Effect>
        </TextBlock>

        <Border VerticalAlignment="Bottom"
                Padding="24,14"
                Background="#C0000000">
            <StackPanel>
                <TextBlock x:Name="StepTitleText"
                           Text="准备更新..."
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold" />
                <TextBlock x:Name="StepDetailText"
                           Text="正在初始化"
                           Foreground="#CCFFFFFF"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0" />

                <StackPanel Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="当前步骤"
                                   Foreground="#F0FFFFFF"
                                   FontSize="13" />
                        <TextBlock x:Name="StepPercentText"
                                   Grid.Column="1"
                                   Text="0%"
                                   Foreground="#F0FFFFFF"
                                   FontSize="13" />
                    </Grid>
                    <ProgressBar x:Name="StepProgressBar"
                                 Height="8"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Margin="0,4,0,0"
                                 Foreground="#FF2ECC71"
                                 Background="#25FFFFFF"
                                 BorderThickness="0" />
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="总体进度"
                                   Foreground="#F0FFFFFF"
                                   FontSize="13" />
                        <TextBlock x:Name="TotalPercentText"
                                   Grid.Column="1"
                                   Text="0%"
                                   Foreground="#F0FFFFFF"
                                   FontSize="13" />
                    </Grid>
                    <ProgressBar x:Name="TotalProgressBar"
                                 Height="8"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"
                                 Margin="0,4,0,0"
                                 Foreground="#FF2ECC71"
                                 Background="#25FFFFFF"
                                 BorderThickness="0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</adu:AduWindow>

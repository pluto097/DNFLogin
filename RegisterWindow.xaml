<?xml version="1.0" encoding="utf-8"?>
<adu:AduWindow x:Class="DNFLogin.RegisterWindow"
               x:Name="RootWindow"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:adu="clr-namespace:AduSkin.Controls.Metro;assembly=AduSkin"
               Title="DNF Register"
               Icon="pack://application:,,,/Assets/DNF.ico"
               Width="400"
               Height="640"
               ResizeMode="NoResize"
               WindowStyle="None"
               Background="Transparent"
               AllowsTransparency="True"
               BorderThickness="0"
               Opacity="0"
               UseLayoutRounding="True"
               WindowStartupLocation="CenterScreen"
               Loaded="Window_Loaded">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <Grid x:Name="RootContainer"
              Grid.RowSpan="2"
              ClipToBounds="True"
              MouseLeftButtonDown="RootContainer_MouseLeftButtonDown">
            <Grid.Background>
                <ImageBrush x:Name="BackgroundImageBrush"
                            Stretch="UniformToFill"
                            AlignmentX="Center"
                            AlignmentY="Center" />
            </Grid.Background>
        </Grid>

        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=adu:AduWindow}}"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="Normal"
                   Margin="24,10,24,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.75" />
            </TextBlock.Effect>
        </TextBlock>

        <Grid Grid.Row="1" ClipToBounds="True">
            <Rectangle RadiusX="20" RadiusY="20"
                       Margin="0"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch">
                <Rectangle.Fill>
                    <VisualBrush Visual="{Binding ElementName=RootContainer}" Stretch="UniformToFill" />
                </Rectangle.Fill>
                <Rectangle.Effect>
                    <BlurEffect Radius="18" />
                </Rectangle.Effect>
            </Rectangle>

            <Border Background="#B0101015"
                    Padding="32,28"
                    CornerRadius="20,20,0,0">
                <StackPanel VerticalAlignment="Center" Margin="0,8,0,8">
                    <TextBlock Text="注册账号"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Margin="0,0,0,18" />

                    <StackPanel>
                        <TextBlock Text="账号"
                                   Foreground="#CCFFFFFF"
                                   Margin="0,8,0,4" />
                        <TextBox x:Name="AccountTextBox"
                                 Height="38"
                                 FontSize="16"
                                 Padding="10,4"
                                 VerticalContentAlignment="Center"
                                 Background="#1FFFFFFF"
                                 Foreground="White"
                                 BorderBrush="#33FFFFFF"
                                 BorderThickness="1" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="密码"
                                   Foreground="#CCFFFFFF"
                                   Margin="0,8,0,4" />
                        <PasswordBox x:Name="PasswordBox"
                                     Height="38"
                                     FontSize="16"
                                     Padding="10,4"
                                     VerticalContentAlignment="Center"
                                     Background="#1FFFFFFF"
                                     Foreground="White"
                                     BorderBrush="#33FFFFFF"
                                     BorderThickness="1" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="确认密码"
                                   Foreground="#CCFFFFFF"
                                   Margin="0,8,0,4" />
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Height="38"
                                     FontSize="16"
                                     Padding="10,4"
                                     VerticalContentAlignment="Center"
                                     Background="#1FFFFFFF"
                                     Foreground="White"
                                     BorderBrush="#33FFFFFF"
                                     BorderThickness="1" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="验证码"
                                   Foreground="#CCFFFFFF"
                                   Margin="0,8,0,4" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="CaptchaTextBox"
                                     Grid.Column="0"
                                     Height="38"
                                     FontSize="16"
                                     Padding="10,4"
                                     VerticalContentAlignment="Center"
                                     Background="#1FFFFFFF"
                                     Foreground="White"
                                     BorderBrush="#33FFFFFF"
                                     BorderThickness="1"
                                     Margin="0,0,12,0" />
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <Border Width="110"
                                        Height="38"
                                        Margin="0,0,8,0"
                                        BorderBrush="#33FFFFFF"
                                        BorderThickness="1">
                                    <Image x:Name="CaptchaImage"
                                           Stretch="Fill"
                                           Cursor="Hand"
                                           MouseDown="CaptchaImage_MouseDown" />
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="推荐人（可选）"
                                   Foreground="#CCFFFFFF"
                                   Margin="0,8,0,4" />
                        <TextBox x:Name="RecommenderTextBox"
                                 Height="38"
                                 FontSize="16"
                                 Padding="10,4"
                                 VerticalContentAlignment="Center"
                                 Background="#1FFFFFFF"
                                 Foreground="White"
                                 BorderBrush="#33FFFFFF"
                                 BorderThickness="1" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="返回登录"
                                Width="100"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="#00000000"
                                Foreground="#FF2ECC71"
                                BorderBrush="#FF2ECC71"
                                BorderThickness="1.5"
                                Click="BackToLogin_Click" />
                        <Button Content="注册"
                                x:Name="RegisterSubmitButton"
                                Height="44"
                                Width="140"
                                Background="#FF2ECC71"
                                Foreground="White"
                                FontSize="18"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Click="RegisterButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid x:Name="RegisterStatusOverlay"
                  Visibility="Collapsed"
                  Background="#99000000"
                  Panel.ZIndex="2"
                  MouseDown="StatusOverlay_MouseDown">
                <Border x:Name="RegisterStatusPanel"
                        Background="#F018181C"
                        Padding="24"
                        CornerRadius="14"
                        Width="360"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        MouseDown="StatusPanel_MouseDown">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="18" Opacity="0.5" ShadowDepth="0" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="StatusTitleText"
                                   Text="提示"
                                   Foreground="#FFFFFFFF"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8" />
                        <TextBlock x:Name="StatusBodyText"
                                   Foreground="#F0FFFFFF"
                                   FontSize="15"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16" />
                        <Button Content="我知道了"
                                Height="36"
                                Background="#FF2ECC71"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="15"
                                Cursor="Hand"
                                Click="StatusCloseButton_Click" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</adu:AduWindow>
